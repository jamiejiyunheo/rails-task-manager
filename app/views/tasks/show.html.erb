<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<%= link_to "Update task", edit_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@task.title}?"}
%>
<%= link_to "Back to all tasks", tasks_path %>
